{
	"name": "react-project-boilerplate",
	"version": "0.0.5",
	"description": "boilerplate for react projects",
	"repository": "https://github.com/ashtrie/react-project-boilerplate.git",
	"main": "server.js",
	"scripts": {
		"start": "webpack --mode production --config webpack.prod.babel.js & node ./src/server",
		"dev": "webpack-dev-server --mode development --config webpack.dev.babel.js",
		"build": "webpack --mode production --config webpack.prod.babel.js",
		"build:dev": "webpack --mode development --config webpack.dev.babel.js",
		"format": "prettier --write 'src/**/*'",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:update": "jest --updateSnapshot"
	},
	"pre-commit": [
		"format",
		"test"
	],
	"author": "skogtake",
	"license": "MIT",
	"dependencies": {
		"lodash": "4.17.11",
		"prop-types": "15.6.2",
		"react": "16.5.0",
		"react-css-modules": "4.7.7",
		"react-dom": "16.5.0",
		"react-redux": "5.0.7",
		"react-router": "4.3.1",
		"react-router-dom": "4.3.1",
		"redux": "4.0.0"
	},
	"devDependencies": {
		"babel-core": "6.26.3",
		"babel-jest": "23.6.0",
		"babel-loader": "7.1.5",
		"babel-plugin-syntax-dynamic-import": "6.18.0",
		"babel-plugin-transform-class-properties": "6.24.1",
		"babel-plugin-transform-object-rest-spread": "6.26.0",
		"babel-plugin-transform-react-constant-elements": "6.23.0",
		"babel-plugin-transform-react-inline-elements": "6.22.0",
		"babel-plugin-transform-react-remove-prop-types": "0.4.15",
		"babel-plugin-transform-runtime": "6.23.0",
		"babel-polyfill": "6.26.0",
		"babel-preset-env": "1.7.0",
		"babel-preset-react": "6.24.1",
		"babel-runtime": "6.26.0",
		"css-loader": "1.0.0",
		"enzyme": "3.6.0",
		"enzyme-adapter-react-16": "1.5.0",
		"enzyme-to-json": "3.3.4",
		"extract-text-webpack-plugin": "3.0.2",
		"file-loader": "2.0.0",
		"jest": "23.6.0",
		"jest-transform-stub": "1.0.0",
		"pre-commit": "1.2.2",
		"prettier": "1.14.2",
		"react-hot-loader": "4.3.7",
		"react-loadable": "5.5.0",
		"redux-devtools-extension": "2.13.5",
		"style-loader": "0.23.0",
		"uglifyjs-webpack-plugin": "1.3.0",
		"webpack": "4.18.1",
		"webpack-cli": "3.1.0",
		"webpack-dev-server": "3.1.8",
		"webpack-merge": "4.1.4",
		"workbox-webpack-plugin": "3.5.0"
	}
}
